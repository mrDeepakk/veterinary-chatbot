# ==========================================
# Docker Compose Environment Variables
# ==========================================
# Rename this to .env in the root directory

# Gemini AI API Key (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# CORS Configuration
# Development: Use * to allow all origins
# Production: Specify your domain (e.g., https://example.com)
CORS_ORIGIN=*

# MongoDB Admin (for mongo-express in dev mode)
MONGO_EXPRESS_PASSWORD=changeme

# Production MongoDB Credentials (for docker-compose.prod.yml)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_password_here
